{
  "name": "vs-code-vuetify-jsonschema-builder",
  "displayName": "DigiWF: JSON Schema Builder",
  "description": "Edit JSON Schema files with an modern easy to use editor.",
  "license": "Apache License 2.0",
  "version": "0.1.0",
  "publisher": "Miragon",
  "repository": {
    "type": "git",
    "url": "https://github.com/FlowSquad/vs-code-vuetify-jsonschema-builder.git"
  },
  "bugs": {
    "url": "https://github.com/FlowSquad/vs-code-vuetify-jsonschema-builder/issues"
  },
  "engines": {
    "vscode": "^1.69.0"
  },
  "icon": "images/logo_marketplace.png",
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [
    "onCustomEditor:jsonschema-builder",
    "onView:jsonschema-renderer",
    "onCommand:jsonschema-renderer.update"
  ],
  "main": "./dist/js/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "jsonschema-builder",
        "id": "jsonschema-builder",
        "displayName": "JSON Schema Builder",
        "selector": [
          {
            "filenamePattern": "*.form"
          }
        ],
        "priority": "default"
      }
    ],
    "configuration": {
      "title": "DigiWF",
      "properties": {
        "jsonSchemaBuilder.toggleStandardEditor": {
          "type": "string",
          "default": "Group",
          "description": "Choose where to open the standard text editor.",
          "enum": [
            "Group",
            "Tab"
          ],
          "enumDescription": [
            "Use Group to open the editor to the side of the currently active one.",
            "Use Tab to open the editor in a new tab."
          ]
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "jsonschema-renderer",
          "name": "JSON Schema Renderer",
          "type": "webview",
          "icon": "$(notebook-render-output)",
          "when": "resourceExtname == .form && jsonschema-builder.openCustomEditors > 0"
        }
      ]
    },
    "commands": [
      {
        "command": "jsonschema-renderer.update",
        "title": "DigiWF: Update Renderer",
        "icon": "$(extensions-sync-enabled)"
      },
      {
        "command": "jsonschema-builder.toggleStdEditor",
        "title": "DigiWF: Toggle Standard Editor",
        "icon": "$(notebook-mimetype)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "jsonschema-renderer.update",
          "when": "view == jsonschema-renderer"
        },
        {
          "command": "jsonschema-builder.toggleStdEditor",
          "when": "resourceExtname == .form && jsonschema-builder.openCustomEditors > 0"
        }
      ],
      "view/title": [
        {
          "command": "jsonschema-renderer.update",
          "group": "navigation",
          "when": "view == jsonschema-renderer"
        }
      ],
      "editor/title": [
        {
          "command": "jsonschema-builder.toggleStdEditor",
          "group": "navigation",
          "when": "resourceExtname == .form && jsonschema-builder.openCustomEditors > 0"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "package": "npm run vue-build && webpack --mode production --devtool hidden-source-map",
    "compile": "tsc -p tsconfig-extension.json",
    "watch": "webpack --mode development",
    "lint": "vue-cli-service lint; eslint src-ext --ext ts",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "ext-build": "webpack --mode development",
    "ext-watch": "webpack --mode development --watch",
    "vue-serve": "vue-cli-service serve",
    "vue-build": "vue-cli-service build && node scripts/extractFontFace.js",
    "watch-build": "nodemon --watch src --ext js,vue,ts --exec \"npm run vue-build\""
  },
  "dependencies": {
    "@koumoul/vjsf": "^2.17.0",
    "@muenchen/digiwf-form-builder": "^0.10.0",
    "core-js": "^3.8.3",
    "vue": "^2.7.7",
    "vuetify": "^2.6.0"
  },
  "devDependencies": {
    "@mdi/font": "^6.9.96",
    "@types/debounce": "^1.2.1",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "@vscode/test-electron": "^2.1.3",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-typescript": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "debounce": "^1.2.1",
    "eslint": "^8.19.0",
    "eslint-plugin-vue": "^8.0.3",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.19",
    "sass": "~1.32.0",
    "sass-loader": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.5.5",
    "util": "^0.12.4",
    "vue-cli-plugin-vuetify": "~2.5.1",
    "vue-template-compiler": "^2.7.7",
    "vuetify-loader": "^1.7.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
