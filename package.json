{
  "name": "vs-code-vuetify-jsonschema-builder",
  "displayName": "DigiWF: JSON Schema Builder",
  "description": "Edit JSON Schema files with an modern easy to use editor.",
  "license": "Apache License 2.0",
  "version": "0.0.1",
  "publisher": "Miragon GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/FlowSquad/vs-code-vuetify-jsonschema-builder.git"
  },
  "bugs": {
    "url": "https://github.com/FlowSquad/vs-code-vuetify-jsonschema-builder/issues"
  },
  "engines": {
    "vscode": "^1.69.0"
  },
  "icon": "images/logo-marketplace.png",
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [
    "onCustomEditor:jsonschema-builder",
    "onView:jsonschema-renderer",
    "onCommand:jsonschema-renderer.update"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "jsonschema-builder",
        "displayName": "JSON Schema Builder",
        "selector": [
          {
            "filenamePattern": "*.form"
          }
        ],
        "priority": "default"
      }
    ],
    "configuration": {
      "title": "DigiWF",
      "properties": {
        "jsonSchemaBuilder.openStandardEditor": {
          "type": "boolean",
          "default": false,
          "description": "Open the Standard VS Code Text Editor besides the custom editor.",
          "order": 1
        },
        "jsonSchemaBuilder.closeStandardEditor": {
          "type": "boolean",
          "default": false,
          "description": "Close the Standard VS Code Text Editor when the Form Builder is closed.",
          "order": 2
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "jsonschema-renderer",
          "name": "JSON Schema Renderer",
          "type": "webview",
          "icon": "$(notebook-render-output)"
        }
      ]
    },
    "commands": [
      {
        "command": "jsonschema-renderer.update",
        "title": "DigiWF: Update Renderer",
        "icon": "$(extensions-sync-enabled)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "jsonschema-renderer.update",
          "group": "navigation",
          "when": "view == jsonschema-renderer"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p tsconfig-extension.json",
    "watch": "tsc -watch -p tsconfig-extension.json",
    "pretest": "npm run compile && npm run lint",
    "ext-lint": "eslint src-ext --ext ts",
    "test": "node ./out/test/runTest.js",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build; node ./scripts/replaceRelativeFonts.js",
    "lint": "vue-cli-service lint",
    "watch-build": "nodemon --watch src --ext js,vue,ts --exec \"npm run build\""
  },
  "dependencies": {
    "@koumoul/vjsf": "^2.17.0",
    "@muenchen/digiwf-form-builder": "^0.10.0",
    "core-js": "^3.8.3",
    "vue": "^2.7.7",
    "vuetify": "^2.6.0"
  },
  "devDependencies": {
    "@mdi/font": "^6.9.96",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "@vscode/test-electron": "^2.1.3",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-typescript": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "eslint": "^8.19.0",
    "eslint-plugin-vue": "^8.0.3",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.19",
    "sass": "~1.32.0",
    "sass-loader": "^10.0.0",
    "ts-debounce": "^4.0.0",
    "typescript": "^4.5.5",
    "vue-cli-plugin-vuetify": "~2.5.1",
    "vue-template-compiler": "^2.7.7",
    "vuetify-loader": "^1.7.0"
  }
}
